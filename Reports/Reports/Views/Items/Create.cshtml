@model List<Item>

<div>
    <h2>Создание товаров</h2>
    <div>
        <form asp-controller="Items" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All"></div>
            @if (Model.Count != 0)
            {
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="div-box">
                        <label asp-for="@Model[i].Name"></label>
                        <input asp-for="@Model[i].Name" />
                        <span asp-validation-for="@Model[i].Name"></span>
                    </div>
                    <div class="div-box">
                        <label asp-for="@Model[i].Amount"></label>
                        <input asp-for="@Model[i].Amount" />
                        <span asp-validation-for="@Model[i].Amount"></span>
                    </div>
                }
            }
            else
            {
                <h2>Нет свободных ячеек</h2>
            }
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>